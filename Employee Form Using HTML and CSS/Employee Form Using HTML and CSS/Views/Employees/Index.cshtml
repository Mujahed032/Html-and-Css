@model IEnumerable<Employee>

<h4>Employees</h4>
<p>
    <a asp-action="Create">Create</a>
</p>

<table class="table table-striped table-bordered border border-secondary border-5 ">
    <thead>
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Email</th>
        <th>Salary</th>
        <th>Date Of Birth</th>
        <th>Department</th>
        <th>Info</th>
    </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Email</td>
            <td>@item.Salary</td>
            <td>@item.DateOfBirth</td>
            <td>@item.Department</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Detail</a>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
        </tr>
        }
    </tbody>
</table>